<h1>My portfolio</h1>
<div class="search-area py-3">

  <%= form_with(url: search_path, local: false, method: :get) do |form| %>
    <%= form.label :stock, class: "form-label" %>
    <%= form.text_field :stock, class: "form-control", id: "exampleDataList", placeholder: "Type to search..." %>
    <%= form.submit "Search", class: "btn btn-success my-2" %>
  <%end%>

</div>

<div id="result">

</div>


<% if @stocks.any? %>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Ticker</th>
      <th scope="col">Last Price</th>
      <th scope="col">Status</th>
    </tr>
    </thead>
    <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.last_price %></td>
        <td><%= link_to "Delete", user_stock_path(stock), class: "btn btn-warning", method: :delete %></td>
      </tr>
    <%end%>
    </tbody>
  </table>
<%end%>







